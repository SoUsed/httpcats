{
    "manifest_version": 2,
    "name": "HTTP Cats Scanner",
    "description": "Display cat images when something is wrong in your search query",
    "version": "0.1",
    "permissions": [
        "activeTab",
        "http://*/*",
        "https://*/*"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}